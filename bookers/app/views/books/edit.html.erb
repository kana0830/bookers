<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
<div class="field">
    <label class="book-title">Title</label>
    <%= f.text_field :title %>
</div>
    <div class="field">
    <label class="book-body">Body</label>
    <%= f.text_area :body %>
</div>
<div class="actions">
    <%= f.submit "Update Book" %>
</div>
<% end %>
<div><%= link_to "Show", books_path %>
| <%= link_to "Back", books_path %></div>
